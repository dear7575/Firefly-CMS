---
export const prerender = false;
import AdminLayout from "../../layouts/AdminLayout.astro";
import { siteConfig } from "../../config";
import I18nKey from "@/i18n/i18nKey";
import { i18n } from "@/i18n/translation";
import { getApiUrl } from "@/utils/api-utils";
const API_URL = getApiUrl();
---

<AdminLayout title={`${i18n(I18nKey.adminDashboard)} - ${siteConfig.title}`} activeMenu="dashboard">
    <div class="p-6 lg:p-8">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Posts Card -->
            <div class="bg-white dark:bg-zinc-900 rounded-2xl p-6 border border-zinc-200 dark:border-zinc-800 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 rounded-xl bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <span class="text-xs font-medium text-green-500 bg-green-50 dark:bg-green-900/20 px-2 py-1 rounded-full" id="recentPostsBadge">+0</span>
                </div>
                <h3 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100" id="totalPosts">-</h3>
                <p class="text-sm text-zinc-500 mt-1">{i18n(I18nKey.siteStatsPostCount)}</p>
                <div class="mt-3 flex gap-4 text-xs">
                    <span class="text-green-600 dark:text-green-400"><span id="publishedPosts">0</span> {i18n(I18nKey.adminPostPublic)}</span>
                    <span class="text-zinc-400"><span id="draftPosts">0</span> {i18n(I18nKey.adminPostDraft)}</span>
                    <span class="text-amber-600 dark:text-amber-400"><span id="encryptedPosts">0</span> {i18n(I18nKey.adminPostProtected)}</span>
                </div>
            </div>

            <!-- Categories Card -->
            <div class="bg-white dark:bg-zinc-900 rounded-2xl p-6 border border-zinc-200 dark:border-zinc-800 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 rounded-xl bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-emerald-600 dark:text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                        </svg>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100" id="totalCategories">-</h3>
                <p class="text-sm text-zinc-500 mt-1">{i18n(I18nKey.categories)}</p>
            </div>

            <!-- Tags Card -->
            <div class="bg-white dark:bg-zinc-900 rounded-2xl p-6 border border-zinc-200 dark:border-zinc-800 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 rounded-xl bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100" id="totalTags">-</h3>
                <p class="text-sm text-zinc-500 mt-1">{i18n(I18nKey.tags)}</p>
            </div>

            <!-- Friends Card -->
            <div class="bg-white dark:bg-zinc-900 rounded-2xl p-6 border border-zinc-200 dark:border-zinc-800 shadow-sm">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 rounded-xl bg-pink-100 dark:bg-pink-900/30 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-600 dark:text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                        </svg>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-zinc-900 dark:text-zinc-100" id="totalFriends">-</h3>
                <p class="text-sm text-zinc-500 mt-1">{i18n(I18nKey.friends)}</p>
                <div class="mt-3 text-xs">
                    <span class="text-green-600 dark:text-green-400"><span id="enabledFriends">0</span> {i18n(I18nKey.adminEnabled)}</span>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <!-- Daily Post Trends -->
            <div class="bg-white dark:bg-zinc-900 rounded-2xl border border-zinc-200 dark:border-zinc-800 shadow-sm">
                <div class="p-6 border-b border-zinc-200 dark:border-zinc-800">
                    <h2 class="text-lg font-bold text-zinc-900 dark:text-zinc-100">发布趋势（近30天）</h2>
                </div>
                <div class="p-6">
                    <canvas id="dailyChart" height="200"></canvas>
                </div>
            </div>

            <!-- Login Stats -->
            <div class="bg-white dark:bg-zinc-900 rounded-2xl border border-zinc-200 dark:border-zinc-800 shadow-sm">
                <div class="p-6 border-b border-zinc-200 dark:border-zinc-800">
                    <h2 class="text-lg font-bold text-zinc-900 dark:text-zinc-100">登录统计（近7天）</h2>
                </div>
                <div class="p-6">
                    <canvas id="loginChart" height="200"></canvas>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Recent Posts -->
            <div class="lg:col-span-2 bg-white dark:bg-zinc-900 rounded-2xl border border-zinc-200 dark:border-zinc-800 shadow-sm">
                <div class="p-6 border-b border-zinc-200 dark:border-zinc-800 flex items-center justify-between">
                    <h2 class="text-lg font-bold text-zinc-900 dark:text-zinc-100">{i18n(I18nKey.recentPosts)}</h2>
                    <a href="/admin/posts" class="text-sm text-[var(--primary)] hover:underline">{i18n(I18nKey.more)} →</a>
                </div>
                <div class="divide-y divide-zinc-100 dark:divide-zinc-800" id="recentPostsList">
                    <div class="p-6 text-center text-zinc-500">{i18n(I18nKey.adminLoading)}</div>
                </div>
            </div>

            <!-- Category Stats -->
            <div class="bg-white dark:bg-zinc-900 rounded-2xl border border-zinc-200 dark:border-zinc-800 shadow-sm">
                <div class="p-6 border-b border-zinc-200 dark:border-zinc-800">
                    <h2 class="text-lg font-bold text-zinc-900 dark:text-zinc-100">{i18n(I18nKey.categories)}</h2>
                </div>
                <div class="p-6 space-y-4" id="categoryStats">
                    <div class="text-center text-zinc-500">{i18n(I18nKey.adminLoading)}</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="mt-8 grid grid-cols-2 md:grid-cols-4 gap-4">
            <a href="/admin/new" class="flex items-center gap-3 p-4 bg-white dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 hover:border-[var(--primary)] hover:shadow-lg transition-all group">
                <div class="w-10 h-10 rounded-lg bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                </div>
                <span class="font-medium text-zinc-700 dark:text-zinc-300">{i18n(I18nKey.adminAdd)} {i18n(I18nKey.adminPost)}</span>
            </a>
            <a href="/admin/categories" class="flex items-center gap-3 p-4 bg-white dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 hover:border-[var(--primary)] hover:shadow-lg transition-all group">
                <div class="w-10 h-10 rounded-lg bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-600 dark:text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                </div>
                <span class="font-medium text-zinc-700 dark:text-zinc-300">{i18n(I18nKey.categories)}</span>
            </a>
            <a href="/admin/friends" class="flex items-center gap-3 p-4 bg-white dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 hover:border-[var(--primary)] hover:shadow-lg transition-all group">
                <div class="w-10 h-10 rounded-lg bg-pink-100 dark:bg-pink-900/30 flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-pink-600 dark:text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                    </svg>
                </div>
                <span class="font-medium text-zinc-700 dark:text-zinc-300">{i18n(I18nKey.friends)}</span>
            </a>
            <a href="/admin/settings" class="flex items-center gap-3 p-4 bg-white dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 hover:border-[var(--primary)] hover:shadow-lg transition-all group">
                <div class="w-10 h-10 rounded-lg bg-zinc-100 dark:bg-zinc-800 flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-zinc-600 dark:text-zinc-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </div>
                <span class="font-medium text-zinc-700 dark:text-zinc-300">{i18n(I18nKey.other)}</span>
            </a>
        </div>
    </div>
</AdminLayout>

<script is:inline>
(function() {
    const API_URL = window.API_URL;
    var t = window.adminI18n || {};

    async function loadDashboardStats() {
        // 检查是否在 dashboard 页面
        var totalPostsEl = document.getElementById('totalPosts');
        if (!totalPostsEl) return; // 不在 dashboard 页面，直接返回

        try {
            const response = await fetch(API_URL + '/dashboard/stats');
            if (!response.ok) throw new Error('Failed to load stats');
            const data = await response.json();

            // Update stats - 添加 null 检查
            var publishedPostsEl = document.getElementById('publishedPosts');
            var draftPostsEl = document.getElementById('draftPosts');
            var encryptedPostsEl = document.getElementById('encryptedPosts');
            var recentPostsBadgeEl = document.getElementById('recentPostsBadge');
            var totalCategoriesEl = document.getElementById('totalCategories');
            var totalTagsEl = document.getElementById('totalTags');
            var totalFriendsEl = document.getElementById('totalFriends');
            var enabledFriendsEl = document.getElementById('enabledFriends');

            if (totalPostsEl) totalPostsEl.textContent = data.posts.total;
            if (publishedPostsEl) publishedPostsEl.textContent = data.posts.published;
            if (draftPostsEl) draftPostsEl.textContent = data.posts.draft;
            if (encryptedPostsEl) encryptedPostsEl.textContent = data.posts.encrypted || 0;
            if (recentPostsBadgeEl) recentPostsBadgeEl.textContent = '+' + data.posts.recent;

            if (totalCategoriesEl) totalCategoriesEl.textContent = data.categories.total;
            if (totalTagsEl) totalTagsEl.textContent = data.tags.total;
            if (totalFriendsEl) totalFriendsEl.textContent = data.friends.total;
            if (enabledFriendsEl) enabledFriendsEl.textContent = data.friends.enabled;

            // Update recent posts
            var recentPostsList = document.getElementById('recentPostsList');
            if (recentPostsList) {
                if (data.latest_posts.length === 0) {
                    recentPostsList.innerHTML = '<div class="p-6 text-center text-zinc-500">' + t.empty + '</div>';
                } else {
                    recentPostsList.innerHTML = data.latest_posts.map(function(post) {
                        return '<a href="/admin/edit/' + post.id + '" class="flex items-center justify-between p-4 hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors">' +
                            '<div class="flex-1 min-w-0">' +
                                '<h3 class="font-medium text-zinc-900 dark:text-zinc-100 truncate">' + post.title + '</h3>' +
                                '<p class="text-sm text-zinc-500 mt-1">' + (post.category || t.uncategorized) + ' · ' + new Date(post.published_at).toLocaleDateString() + '</p>' +
                            '</div>' +
                            '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-zinc-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">' +
                                '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />' +
                            '</svg>' +
                        '</a>';
                    }).join('');
                }
            }

            // Update category stats
            var categoryStats = document.getElementById('categoryStats');
            if (categoryStats) {
                if (data.categories.stats.length === 0) {
                    categoryStats.innerHTML = '<div class="text-center text-zinc-500">' + t.noCategories + '</div>';
                } else {
                    var maxCount = Math.max.apply(null, data.categories.stats.map(function(c) { return c.count; }).concat([1]));
                    categoryStats.innerHTML = data.categories.stats.map(function(cat) {
                        var widthPercent = (cat.count / maxCount) * 100;
                        return '<div class="space-y-2">' +
                            '<div class="flex items-center justify-between text-sm">' +
                                '<span class="text-zinc-700 dark:text-zinc-300">' + cat.name + '</span>' +
                                '<span class="font-medium text-indigo-600 dark:text-indigo-400">' + cat.count + '</span>' +
                            '</div>' +
                            '<div class="h-2 bg-zinc-100 dark:bg-zinc-700 rounded-full overflow-hidden">' +
                                '<div class="h-full bg-indigo-500 dark:bg-indigo-400 rounded-full transition-all" style="width: ' + widthPercent + '%"></div>' +
                            '</div>' +
                        '</div>';
                    }).join('');
                }
            }

            // Render charts
            renderCharts(data.charts);
        } catch (err) {
            console.error('Failed to load dashboard stats:', err);
        }
    }

    // Chart instances
    var dailyChartInstance = null;
    var loginChartInstance = null;

    function renderCharts(chartsData) {
        if (!chartsData) return;

        // Check if Chart.js is loaded
        if (typeof Chart === 'undefined') {
            console.error('Chart.js is not loaded');
            return;
        }

        var isDark = document.documentElement.classList.contains('dark');
        var gridColor = isDark ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.05)';
        var textColor = isDark ? 'rgba(255, 255, 255, 0.7)' : 'rgba(0, 0, 0, 0.7)';

        // Daily Chart - 发布趋势
        var dailyCtx = document.getElementById('dailyChart');
        if (dailyCtx && chartsData.daily) {
            if (dailyChartInstance) {
                dailyChartInstance.destroy();
            }

            var labels = chartsData.daily.map(function(d) {
                var date = new Date(d.date);
                return (date.getMonth() + 1) + '/' + date.getDate();
            });
            var counts = chartsData.daily.map(function(d) { return d.count; });

            dailyChartInstance = new Chart(dailyCtx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: '发布文章数',
                        data: counts,
                        borderColor: 'rgb(99, 102, 241)',
                        backgroundColor: 'rgba(99, 102, 241, 0.1)',
                        fill: true,
                        tension: 0.4,
                        pointRadius: counts.length > 20 ? 0 : 3,
                        pointHoverRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: isDark ? 'rgba(24, 24, 27, 0.9)' : 'rgba(255, 255, 255, 0.9)',
                            titleColor: isDark ? '#fff' : '#000',
                            bodyColor: isDark ? '#fff' : '#000',
                            borderColor: gridColor,
                            borderWidth: 1,
                            padding: 10,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return '发布: ' + context.parsed.y + ' 篇';
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                color: gridColor,
                                drawBorder: false
                            },
                            ticks: {
                                color: textColor,
                                maxRotation: 0,
                                autoSkipPadding: 20
                            }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: gridColor,
                                drawBorder: false
                            },
                            ticks: {
                                color: textColor,
                                stepSize: 1
                            }
                        }
                    },
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    }
                }
            });
        }

        // Login Chart - 登录统计
        var loginCtx = document.getElementById('loginChart');
        if (loginCtx && chartsData.login) {
            if (loginChartInstance) {
                loginChartInstance.destroy();
            }

            var loginLabels = chartsData.login.map(function(d) {
                var date = new Date(d.date);
                return (date.getMonth() + 1) + '/' + date.getDate();
            });
            var successData = chartsData.login.map(function(d) { return d.success; });
            var failedData = chartsData.login.map(function(d) { return d.failed; });

            loginChartInstance = new Chart(loginCtx, {
                type: 'bar',
                data: {
                    labels: loginLabels,
                    datasets: [
                        {
                            label: '成功',
                            data: successData,
                            backgroundColor: 'rgba(34, 197, 94, 0.8)',
                            borderRadius: 4
                        },
                        {
                            label: '失败',
                            data: failedData,
                            backgroundColor: 'rgba(239, 68, 68, 0.8)',
                            borderRadius: 4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top',
                            align: 'end',
                            labels: {
                                color: textColor,
                                usePointStyle: true,
                                padding: 20
                            }
                        },
                        tooltip: {
                            backgroundColor: isDark ? 'rgba(24, 24, 27, 0.9)' : 'rgba(255, 255, 255, 0.9)',
                            titleColor: isDark ? '#fff' : '#000',
                            bodyColor: isDark ? '#fff' : '#000',
                            borderColor: gridColor,
                            borderWidth: 1,
                            padding: 10
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false,
                                drawBorder: false
                            },
                            ticks: {
                                color: textColor
                            }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: gridColor,
                                drawBorder: false
                            },
                            ticks: {
                                color: textColor,
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }
    }

    // Update charts when theme changes
    var themeObserver = new MutationObserver(function() {
        fetch(`${API_URL}/dashboard/stats`)
            .then(function(res) { return res.json(); })
            .then(function(data) {
                if (data.charts) {
                    renderCharts(data.charts);
                }
            })
            .catch(function(err) { console.error('Failed to refresh charts:', err); });
    });

    // Start observing theme changes
    setTimeout(function() {
        var html = document.documentElement;
        if (html) {
            themeObserver.observe(html, {
                attributes: true,
                attributeFilter: ['class']
            });
        }
    }, 1000);

    loadDashboardStats();
})();
</script>
