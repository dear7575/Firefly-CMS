                            s.key === 'profile_avatar' || s.key === 'avatar' || s.key === 'site_avatar'
                        );
                        if (avatarSetting && avatarSetting.value && avatarContainer && defaultIcon) {
                            // If same as cached, do nothing?
                            if (hasCachedAvatar && cachedAvatar === avatarSetting.value) return;

                            const img = document.createElement('img');
                            img.src = avatarSetting.value;
                            img.alt = "用户头像";
                            img.className = "w-full h-full object-cover";
                            img.onerror = function () {
                                // 加载失败时保留默认图标
