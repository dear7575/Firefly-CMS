<script is:inline>
    document.addEventListener('astro:page-load', () => {
        /**
         * Admin panel core script
         */
        (function () {
            // ============== 清理之前的 Vditor 实例和定时器 ==============
            // 先重置初始化标志，阻止正在进行的初始化
            window._newPageVditorInitialized = false;
