<script is:inline>
    // ============== 全局美化弹框函数 ==============
    (function () {
        var modal = document.getElementById('adminModal');
        var modalContent = document.getElementById('adminModalContent');
        var modalTitle = document.getElementById('adminModalTitle');
        var modalMessage = document.getElementById('adminModalMessage');
        var modalIcon = document.getElementById('adminModalIcon');
        var confirmBtn = document.getElementById('adminModalConfirm');
        var cancelBtn = document.getElementById('adminModalCancel');
        var resolveCallback = null;

        var icons = {
            success: {el: document.getElementById('iconSuccess'), bg: 'bg-green-100 dark:bg-green-900/30'},
            error: {el: document.getElementById('iconError'), bg: 'bg-red-100 dark:bg-red-900/30'},
            warning: {el: document.getElementById('iconWarning'), bg: 'bg-orange-100 dark:bg-orange-900/30'},
            info: {el: document.getElementById('iconInfo'), bg: 'bg-blue-100 dark:bg-blue-900/30'},
            confirm: {el: document.getElementById('iconConfirm'), bg: 'bg-indigo-100 dark:bg-indigo-900/30'}
        };

        function showModal(options) {
            var type = options.type || 'info';
            var title = options.title || '';
            var message = options.message || '';
            var showCancel = options.showCancel || false;
            var confirmText = options.confirmText || '确定';
            var cancelText = options.cancelText || '取消';

            // 设置内容
            modalTitle.textContent = title;
            modalMessage.textContent = message;
            confirmBtn.textContent = confirmText;
            cancelBtn.textContent = cancelText;

            // 显示/隐藏取消按钮
            if (showCancel) {
                cancelBtn.classList.remove('hidden');
            } else {
                cancelBtn.classList.add('hidden');
            }

            // 设置图标
            Object.keys(icons).forEach(function (key) {
                icons[key].el.classList.add('hidden');
            });
            if (icons[type]) {
                icons[type].el.classList.remove('hidden');
                modalIcon.className = 'w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center ' + icons[type].bg;
            }

            // 显示弹框
            modal.classList.remove('hidden');
            modal.classList.add('flex');

            // 动画
            setTimeout(function () {
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
            }, 10);

            return new Promise(function (resolve) {
                resolveCallback = resolve;
            });
        }

        function hideModal(result) {
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');

            setTimeout(function () {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
                if (resolveCallback) {
                    resolveCallback(result);
                    resolveCallback = null;
                }
            }, 200);
        }

        // 事件绑定
        if (confirmBtn) {
            confirmBtn.addEventListener('click', function () {
                hideModal(true);
            });
        }

        if (cancelBtn) {
            cancelBtn.addEventListener('click', function () {
                hideModal(false);
            });
        }

        if (modal) {
            modal.addEventListener('click', function (e) {
                if (e.target === modal) {
                    hideModal(false);
                }
            });
        }

        // 全局函数
        window.adminAlert = function (message, type, title) {
            return showModal({
                type: type || 'info',
                title: title || (type === 'success' ? '成功' : type === 'error' ? '错误' : '提示'),
                message: message,
                showCancel: false
            });
        };

        window.adminConfirm = function (message, title) {
            return showModal({
                type: 'confirm',
                title: title || '确认操作',
                message: message,
                showCancel: true,
                confirmText: '确定',
                cancelText: '取消'
            });
        };
    })();
</script>

