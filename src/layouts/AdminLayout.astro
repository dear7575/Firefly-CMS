            // 渲染分页控件
            function renderPagination() {
                let paginationContainer = document.getElementById("paginationContainer");
                if (!paginationContainer) return;

                // 格式化分页信息文本
                const pageInfo = t.paginationInfo
                    .replace('{page}', currentPage)
                    .replace('{total}', totalPages);

                paginationContainer.innerHTML = `
                        <div class="flex items-center justify-between px-6 py-4 bg-zinc-50 dark:bg-zinc-800/50 border-t border-zinc-200 dark:border-zinc-800">
                            <div class="text-sm text-zinc-500">
                                ${pageInfo} (${totalPosts} 条记录)
                            </div>
                            <div class="flex items-center gap-2">
                                <button
                                    onclick="goToPage(${currentPage - 1})"
                                    ${currentPage <= 1 ? 'disabled' : ''}
                                    class="px-3 py-1.5 text-sm font-medium rounded-lg transition-colors ${currentPage <= 1 ? 'text-zinc-300 dark:text-zinc-600 cursor-not-allowed' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-200 dark:hover:bg-zinc-700'}"
                                >
                                    ${t.paginationPrev}
                                </button>
                                <div class="flex items-center gap-1">
                                    ${generatePageButtons()}
                                </div>
                                <button
                                    onclick="goToPage(${currentPage + 1})"
                                    ${currentPage >= totalPages ? 'disabled' : ''}
                                    class="px-3 py-1.5 text-sm font-medium rounded-lg transition-colors ${currentPage >= totalPages ? 'text-zinc-300 dark:text-zinc-600 cursor-not-allowed' : 'text-zinc-600 dark:text-zinc-400 hover:bg-zinc-200 dark:hover:bg-zinc-700'}"
                                >
                                    ${t.paginationNext}
                                </button>
                            </div>
                        </div>
                    `;
            }

            // 生成页码按钮
            function generatePageButtons() {
                if (totalPages <= 1) return '';

                const buttons = [];
                const maxVisible = 5;
                let start = Math.max(1, currentPage - Math.floor(maxVisible / 2));
                let end = Math.min(totalPages, start + maxVisible - 1);

                if (end - start + 1 < maxVisible) {
                    start = Math.max(1, end - maxVisible + 1);
                }

                // 首页
                if (start > 1) {
                    buttons.push(`<button onclick="goToPage(1)" class="w-8 h-8 text-sm font-medium rounded-lg text-zinc-600 dark:text-zinc-400 hover:bg-zinc-200 dark:hover:bg-zinc-700">1</button>`);
                    if (start > 2) {
                        buttons.push(`<span class="px-1 text-zinc-400">...</span>`);
                    }
                }

                // 中间页码
                for (let i = start; i <= end; i++) {
                    if (i === currentPage) {
                        buttons.push(`<button class="w-8 h-8 text-sm font-medium rounded-lg bg-[var(--primary)] text-white">${i}</button>`);
                    } else {
                        buttons.push(`<button onclick="goToPage(${i})" class="w-8 h-8 text-sm font-medium rounded-lg text-zinc-600 dark:text-zinc-400 hover:bg-zinc-200 dark:hover:bg-zinc-700">${i}</button>`);
                    }
                }

                // 尾页
                if (end < totalPages) {
                    if (end < totalPages - 1) {
                        buttons.push(`<span class="px-1 text-zinc-400">...</span>`);
                    }
                    buttons.push(`<button onclick="goToPage(${totalPages})" class="w-8 h-8 text-sm font-medium rounded-lg text-zinc-600 dark:text-zinc-400 hover:bg-zinc-200 dark:hover:bg-zinc-700">${totalPages}</button>`);
                }

                return buttons.join('');
            }

            // 跳转到指定页
            window.goToPage = function (page) {
                if (page < 1 || page > totalPages || page === currentPage) return;
                isLoading = false; // 重置加载状态
                loadPosts(page);
            };

            // Delete post function
            window.deletePost = async function (id) {
                const confirmed = await window.showAdminConfirm(t.confirmDelete);
                if (!confirmed) return;

                try {
                    const result = await window.adminRequest(`${API_URL}/posts/${id}`, {
                        method: "DELETE",
                        headers: {
                            Authorization: `Bearer ${localStorage.getItem("adminToken")}`,
                        },
                    });

                    if (result.ok) {
                        isLoading = false;
                        loadPosts(currentPage);  // 保持当前页码
                    } else if (result.code !== 401) {
                        // 401 由全局拦截器处理
                        window.showAdminAlert(result.msg || t.deleteFailed, "error");
                    }
                } catch (err) {
                    console.error("Failed to delete post:", err);
                    window.showAdminAlert(t.deleteFailed, "error");
                }
            };

            // Toggle pin function - 使用 PUT 接口更新置顶状态
            window.togglePin = async function (id) {
                try {
                    // 先获取文章当前数据
                    const getResult = await window.adminRequest(`${API_URL}/posts/${id}`, {
                        headers: {
                            Authorization: `Bearer ${localStorage.getItem("adminToken")}`,
                        },
                    });

                    if (!getResult.ok) {
                        if (getResult.code !== 401) {
                            // 401 由全局拦截器处理
                            window.showAdminAlert(getResult.msg || '获取文章信息失败', "error");
                        }
                        return;
                    }

                    const post = getResult.data;

                    // 使用 PUT 接口更新置顶状态
                    const updateResult = await window.adminRequest(`${API_URL}/posts/${id}`, {
                        method: "PUT",
                        headers: {
                            "Content-Type": "application/json",
                            Authorization: `Bearer ${localStorage.getItem("adminToken")}`,
                        },
                        body: JSON.stringify({
                            title: post.title,
                            slug: post.slug,
                            description: post.description || "",
                            content: post.content,
                            image: post.image || "",
                            category_name: post.category || "",
                            tags: post.tags || [],
                            password: post.password || "",
                            is_draft: post.is_draft || false,
                            pinned: !post.pinned  // 切换置顶状态
                        }),
                    });

                    if (updateResult.ok) {
                        isLoading = false;
                        loadPosts(currentPage);  // 保持当前页码
                    } else if (updateResult.code !== 401) {
                        // 401 由全局拦截器处理
                        window.showAdminAlert(updateResult.msg || '操作失败', "error");
                    }
                } catch (err) {
                    console.error("Failed to toggle pin:", err);
                    window.showAdminAlert('操作失败', "error");
                }
            };

            window.adminLoadPosts = loadPosts;

            // 渲染文章列表（供筛选功能调用）
            function renderPosts(posts) {
                const tableBody = document.getElementById("postsTableBody");
                if (!tableBody) return;

                // 计算分页
                totalPosts = posts.length;
                totalPages = Math.ceil(totalPosts / pageSize) || 1;

                // 如果当前页超出范围，重置到第一页
                if (currentPage > totalPages) {
                    currentPage = 1;
                }

                // 手动分页
                const startIndex = (currentPage - 1) * pageSize;
                const pagedPosts = posts.slice(startIndex, startIndex + pageSize);

                if (pagedPosts.length === 0) {
                    tableBody.innerHTML =
                        '<tr><td colspan="5" class="px-6 py-12 text-center text-zinc-500">' + t.empty + '</td></tr>';
                } else {
                    tableBody.innerHTML = pagedPosts
                        .map(function (post) {
                            const statusBadges = [];
                            // 置顶标签
                            if (post.pinned)
                                statusBadges.push(
                                    '<span class="px-2 py-0.5 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 text-[10px] font-bold rounded uppercase tracking-wider">' + t.pinned + '</span>',
                                );
                            if (post.is_draft)
                                statusBadges.push(
                                    '<span class="px-2 py-0.5 bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400 text-[10px] font-bold rounded uppercase tracking-wider">' + t.draft + '</span>',
                                );
                            if (post.has_password)
                                statusBadges.push(
                                    '<span class="px-2 py-0.5 bg-amber-50 dark:bg-amber-900/20 text-amber-600 dark:text-amber-400 text-[10px] font-bold rounded uppercase tracking-wider">' + t.protected + '</span>',
                                );
                            if (!post.is_draft && !post.has_password)
                                statusBadges.push(
                                    '<span class="px-2 py-0.5 bg-green-50 dark:bg-green-900/20 text-green-600 dark:text-green-400 text-[10px] font-bold rounded uppercase tracking-wider">' + t.public + '</span>',
                                );

                            // 置顶按钮图标
                            const pinIcon = post.pinned
                                ? '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor"><path d="M16 12V4h1V2H7v2h1v8l-2 2v2h5.2v6h1.6v-6H18v-2l-2-2z"/></svg>'
                                : '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M16 12V4h1V2H7v2h1v8l-2 2v2h5.2v6h1.6v-6H18v-2l-2-2z"/></svg>';

                            return `
                            <tr class="hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors ${post.pinned ? 'pinned-row' : ''}">
                                <td class="px-6 py-4">
                                    <div class="font-medium text-zinc-900 dark:text-zinc-100">${post.title}</div>
                                    <div class="text-xs text-zinc-400 font-mono mt-1">${post.slug}</div>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <div class="flex flex-wrap gap-1 justify-center">${statusBadges.join("")}</div>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <span class="px-2 py-1 bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400 text-xs rounded">
                                        ${post.category || t.uncategorized}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-zinc-500 text-center">
                                    ${new Date(post.published_at).toLocaleDateString()}
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <div class="flex items-center gap-1 justify-center">
                                        <button onclick="togglePin('${post.id}')" class="p-2 ${post.pinned ? 'text-[var(--primary)]' : 'text-zinc-400'} hover:bg-[var(--primary)]/10 rounded-lg transition-colors" title="${post.pinned ? '取消置顶' : '置顶'}">
                                            ${pinIcon}
                                        </button>
                                        <a href="/admin/edit/${post.id}" class="p-2 text-[var(--primary)] hover:bg-[var(--primary)]/10 rounded-lg transition-colors" title="编辑">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>
                                        <button onclick="deletePost('${post.id}')" class="p-2 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg transition-colors" title="删除">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        `;
                        })
                        .join("");
                }

                // 渲染分页控件
                renderPagination();
            }

            window.adminRenderPosts = renderPosts;

            // 渲染回收站文章列表
            function renderTrashPosts(posts) {
                const tableBody = document.getElementById("postsTableBody");
                if (!tableBody) return;

                // 计算分页
                totalPosts = posts.length;
                totalPages = Math.ceil(totalPosts / pageSize) || 1;

                // 如果当前页超出范围，重置到第一页
                if (currentPage > totalPages) {
                    currentPage = 1;
                }

                // 手动分页
                const startIndex = (currentPage - 1) * pageSize;
                const pagedPosts = posts.slice(startIndex, startIndex + pageSize);

                if (pagedPosts.length === 0) {
                    tableBody.innerHTML =
                        '<tr><td colspan="5" class="px-6 py-12 text-center text-zinc-500">回收站为空</td></tr>';
                } else {
                    tableBody.innerHTML = pagedPosts
                        .map(function (post) {
                            const deletedDate = post.deleted_at ? new Date(post.deleted_at).toLocaleString() : '-';
                            const titleEscaped = post.title.replace(/'/g, "\\'");

                            return `
                            <tr class="hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="font-medium text-zinc-900 dark:text-zinc-100">${post.title}</div>
                                    <div class="text-xs text-zinc-400 font-mono mt-1">${post.slug}</div>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <span class="px-2 py-0.5 bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-[10px] font-bold rounded uppercase tracking-wider">已删除</span>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <span class="px-2 py-1 bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400 text-xs rounded">
                                        ${post.category || t.uncategorized}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-zinc-500 text-center">
                                    ${deletedDate}
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <div class="flex items-center gap-1 justify-center">
                                        <button onclick="restorePost('${post.id}')" class="p-2 text-green-500 hover:bg-green-50 dark:hover:bg-green-900/30 rounded-lg transition-colors" title="恢复">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                            </svg>
                                        </button>
                                        <button onclick="permanentDeletePost('${post.id}', '${titleEscaped}')" class="p-2 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg transition-colors" title="永久删除">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        `;
                        })
                        .join("");
                }

                // 渲染分页控件
                renderPagination();
            }

            window.adminRenderTrashPosts = renderTrashPosts;

            // 恢复文章
            window.restorePost = async function (id) {
                try {
                    const result = await window.adminRequest(`${API_URL}/posts/${id}/restore`, {
                        method: "POST",
                        headers: {
                            Authorization: `Bearer ${localStorage.getItem("adminToken")}`,
                        },
                    });

                    if (result.ok) {
                        await window.showAdminAlert(result.msg || "文章已恢复", "success");
                        isLoading = false;
                        loadPosts(1);
                    } else {
                        window.showAdminAlert(result.msg || "恢复失败", "error");
                    }
                } catch (err) {
                    console.error(err);
                    window.showAdminAlert("恢复失败", "error");
                }
            };

            // 永久删除文章
            window.permanentDeletePost = async function (id, title) {
                const confirmed = await window.showAdminConfirm(`确定要永久删除文章 "${title}" 吗？此操作不可恢复！`);

                if (!confirmed) return;

                try {
                    const result = await window.adminRequest(`${API_URL}/posts/${id}?permanent=true`, {
                        method: "DELETE",
                        headers: {
                            Authorization: `Bearer ${localStorage.getItem("adminToken")}`,
                        },
                    });

                    if (result.ok) {
                        await window.showAdminAlert(result.msg || "文章已永久删除", "success");
                        isLoading = false;
                        loadPosts(1);
                    } else {
                        window.showAdminAlert(result.msg || "删除失败", "error");
                    }
                } catch (err) {
                    console.error(err);
                    window.showAdminAlert("删除失败", "error");
                }
            };

            // Initialize posts page
            function initPostsPage() {
                const path = window.location.pathname;
                if (path === "/admin/posts/" || path === "/admin/posts") {
                    const newPostBtn = document.getElementById("newPostBtn");
                    if (newPostBtn) {
                        newPostBtn.onclick = function () {
                            window.location.href = "/admin/new";
                        };
                    }

                    if (loadDebounceTimer) clearTimeout(loadDebounceTimer);
                    loadDebounceTimer = setTimeout(loadPosts, 50);
                }
            }

            initPostsPage();
        })();
    });
</script>
</body>
</html>
