                        '<div class="color-picker-thumb" style="left: ' + (hexToHue(input.value) / 360 * 100) + '%"></div>';
                    dropdown.appendChild(sliderContainer);

                    // 预设颜色
                    var presetsDiv = document.createElement('div');
                    presetsDiv.className = 'color-picker-presets';
                    presetHues.forEach(function (hue) {
                        var preset = document.createElement('div');
