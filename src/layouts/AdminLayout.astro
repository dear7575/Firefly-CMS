                modalMessage.textContent = message;
                confirmBtn.textContent = confirmText;
                cancelBtn.textContent = cancelText;

                // 显示/隐藏取消按钮
                if (showCancel) {
                    cancelBtn.classList.remove('hidden');
                } else {
                    cancelBtn.classList.add('hidden');
                }

                if (inputOptions && modalInputWrapper && modalInput) {
                    modalInputWrapper.classList.remove('hidden');
                    modalInput.type = inputOptions.type || "text";
                    modalInput.placeholder = inputOptions.placeholder || "";
                    modalInput.value = inputOptions.value || "";
                } else if (modalInputWrapper && modalInput) {
                    modalInputWrapper.classList.add('hidden');
                    modalInput.value = "";
                }

                // 设置图标
                Object.keys(icons).forEach(function (key) {
                    icons[key].el.classList.add('hidden');
                });
                if (icons[type]) {
                    icons[type].el.classList.remove('hidden');
                    modalIcon.className = 'w-16 h-16 mx-auto mb-4 rounded-full flex items-center justify-center ' + icons[type].bg;
                }

                // 显示弹框
                modal.classList.remove('hidden');
                modal.classList.add('flex');

                // 动画
                setTimeout(function () {
                    modalContent.classList.remove('scale-95', 'opacity-0');
                    modalContent.classList.add('scale-100', 'opacity-100');
                    if (inputOptions && modalInput) {
                        modalInput.focus();
                        modalInput.select();
                    }
                }, 10);

                return new Promise(function (resolve) {
                    resolveCallback = resolve;
                });
            }

            function hideModal(result) {
                modalContent.classList.remove('scale-100', 'opacity-100');
                modalContent.classList.add('scale-95', 'opacity-0');

                setTimeout(function () {
                    modal.classList.add('hidden');
                    modal.classList.remove('flex');
                    if (resolveCallback) {
                        var finalResult = result;
                        if (currentMode === "prompt") {
                            finalResult = result ? (modalInput ? modalInput.value : "") : null;
                        }
                        resolveCallback(finalResult);
                        resolveCallback = null;
                    }
                    currentMode = "alert";
                }, 200);
            }

            // 事件绑定
            if (confirmBtn) {
                confirmBtn.addEventListener('click', function () {
                    hideModal(true);
                });
            }

            if (cancelBtn) {
                cancelBtn.addEventListener('click', function () {
                    hideModal(false);
                });
            }

            if (modal) {
                modal.addEventListener('click', function (e) {
                    if (e.target === modal) {
                        hideModal(false);
                    }
                });
            }

            if (modalInput) {
                modalInput.addEventListener('keydown', function (e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        hideModal(true);
                    }
                });
            }

            // 全局函数
            window.adminAlert = function (message, type, title) {
                return showModal({
                    type: type || 'info',
                    title: title || (type === 'success' ? '成功' : type === 'error' ? '错误' : '提示'),
                    message: message,
                    showCancel: false,
                    mode: "alert"
                });
            };

            window.adminConfirm = function (message, title) {
                return showModal({
                    type: 'confirm',
                    title: title || '确认操作',
                    message: message,
                    showCancel: true,
                    confirmText: '确定',
                    cancelText: '取消',
                    mode: "confirm"
                });
            };

            window.adminPrompt = function (message, options) {
                var opts = options || {};
                return showModal({
                    type: opts.type || 'info',
                    title: opts.title || '请输入',
                    message: message || '',
                    showCancel: true,
                    confirmText: opts.confirmText || '确定',
                    cancelText: opts.cancelText || '取消',
                    mode: "prompt",
                    input: {
                        type: opts.inputType || "text",
                        placeholder: opts.placeholder || "",
                        value: opts.defaultValue || ""
                    }
                });
            };

            window.showAdminAlert = function (message, type, title) {
                if (window.adminAlert) {
                    return window.adminAlert(message, type, title);
                }
                console.warn(message);
                return Promise.resolve();
            };

            window.showAdminConfirm = function (message, title) {
                if (window.adminConfirm) {
                    return window.adminConfirm(message, title);
                }
                console.warn(message);
                return Promise.resolve(false);
            };

            window.showAdminPrompt = function (message, options) {
                if (window.adminPrompt) {
                    return window.adminPrompt(message, options);
                }
                console.warn(message);
                return Promise.resolve(null);
            };
        })();
